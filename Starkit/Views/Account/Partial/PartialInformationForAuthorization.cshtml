@model Register

<div class="form-group row">
    <label class="col-sm-3 col-form-label register-label">Логин:
    </label>
    <div class="col-sm-9">
        <p class="form-control" id="login" style="background: #e9ecef"></p>
        <span style="color: silver;">
            В качестве логина для личного кабинета используется ваш email из контактной информации.
        </span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Password" class="col-sm-3 col-form-label register-label">Пароль:
        <span title="Обязательное поле" class="form-required">*</span>
    </label>
    <div class="col-sm-9">
        <input class="form-control" asp-for="Password">
        <span asp-validation-for="Password"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="ConfirmPassword" class="col-sm-3 col-form-label register-label">Подтвердите пароль:
        <span title="Обязательное поле" class="form-required">*</span>
    </label>
    <div class="col-sm-9">
        <input class="form-control" asp-for="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
</div>