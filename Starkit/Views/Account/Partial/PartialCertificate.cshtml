@model Register

<div class="form-group row">
    <label asp-for="SurName" class="col-sm-3 col-form-label register-label">Фамилия:
        <span title="Обязательное поле" class="form-required">*</span>
    </label>
    <div class="col-sm-9">
        <input type="text" class="form-control" asp-for="SurName">
        <span asp-validation-for="SurName"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Name" class="col-sm-3 col-form-label register-label">Имя:
        <span title="Обязательное поле" class="form-required">*</span>
    </label>
    <div class="col-sm-9">
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="CompanyName" class="col-sm-3 col-form-label register-label">
        Название компании:
        <span title="Обязательное поле" class="form-required">*</span>
    </label>
    <div class="col-sm-9">
        <input type="text" class="form-control" asp-for="CompanyName">
        <span asp-validation-for="CompanyName"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="IIN" class="col-sm-3 col-form-label register-label">ИИН:
        <span title="Обязательное поле" class="form-required">*</span>
    </label>
    <div class="col-sm-9">
        <input type="text" maxlength="12" class="form-control"  asp-for="IIN" placeholder="12 цифр">
        <span asp-validation-for="IIN"></span>
    </div>
</div>