@model Register

<div class="form-group row">
            <label asp-for="Email"  class="col-sm-3 col-form-label">E-mail:
                <span title="Обязательное поле" class="form-required">*</span>
            </label>
            <div class="col-sm-9">
                <input class="form-control" id="Email" asp-for="Email">
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-sm-3 col-form-label">Мобильный телефон:
                <span title="Обязательное поле" class="form-required">*</span>
            </label>
            <div class="col-sm-9">
                <input type="number" class="form-control" asp-for="PhoneNumber" placeholder="7-777-0000000">
                <span asp-validation-for="PhoneNumber"></span>
                </div>
        </div>
        <div class="form-group row">
            <label asp-for="CityPhone" class="col-sm-3 col-form-label">Городской телефон:
                <span title="Обязательное поле" class="form-required">*</span>
            </label>
            <div class="col-sm-9">
                <input type="number" class="form-control" asp-for="CityPhone" placeholder="7-727-0000000(внутр)">
            </div>
        </div>

