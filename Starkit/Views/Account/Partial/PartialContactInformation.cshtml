@model Register

<div class="form-group row">
            <label asp-for="Email"  class="col-sm-3 col-form-label register-label">E-mail:
                <span title="Обязательное поле" class="form-required">*</span>
            </label>
            <div class="col-sm-9">
                <input class="form-control" id="Email" asp-for="Email">
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-sm-3 col-form-label register-label">Мобильный телефон:
                <span title="Обязательное поле" class="form-required">*</span>
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="phoneNumber" asp-for="PhoneNumber" placeholder="+7 (___) ___-____">
                <span asp-validation-for="PhoneNumber"></span>
                </div>
        </div>
        <div class="form-group row">
            <label asp-for="CityPhone" class="col-sm-3 col-form-label register-label">Городской телефон:
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="CityPhone" id="cityPhone" placeholder="+7-727-0000000">
            </div>
        </div>

