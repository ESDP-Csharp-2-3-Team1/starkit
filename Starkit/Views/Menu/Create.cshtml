@model Menu

@{
    ViewBag.Title = "Добавление меню";
    Layout = "_Layout";
}

<h2>Добавление меню</h2>
<div class="row">
    <div class="col-md-6 mt-5">
        <h2 class="create-dish">Добавление блюда</h2>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label for="" class="col-sm-4 col-form-label">Выберите блюда</label><br/>
                <div class="col-sm-8">
                    <select multiple class="form-control" asp-for="DishesId">
                        @foreach (var g in Model.Dishes)
                        {
                            <optgroup label="@g.Key.Name">
                                @foreach (var t in g)
                                {
                                    <option value="@t.Id">@t.Name</option>
                                }
                            </optgroup>    
                        }
                    </select>
                    <span class="validationError" asp-validation-for="DishesId"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-4 col-form-label">Название меню</label><br/>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <span class="validationError" asp-validation-for="Name"></span>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <label for="myFIle" class="chous">Выберите файл</label>
                    <input type="file"  id="myFIle" class="form-control my" asp-for="File" multiple="multiple"/>
                </div>
                <span class="validationError" asp-validation-for="File"></span>
            </div>
            <div style="text-align: center">
                <br/><button type="submit" class="btn btn-dark">Добавить</button>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    <script>
        $('.my').change(function() {
            if ($(this).val() != '') $(this).prev().text('Выбрано файлов: ' + $(this)[0].files.length);
            else $(this).prev().text('Выберите файлы');
        });
    </script>
}
