@{
    ViewBag.Title = "Управление меню";
    Layout = "_Layout";
}

<h2 class="text-menu">Меню</h2>
<button type="button" class="btn btn-dark" data-toggle="modal" data-target="#exampleModal">Удалить</button>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-body">
        Вы уверены?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
        <button onclick="deleteDishes()" type="button" class="btn btn-primary">Удалить</button>
      </div>
    </div>
  </div>
</div>
@* <button onclick="deleteDishes()" class="btn btn-dark">Удалить</button> *@
<div style="overflow-x:auto;">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th></th>
            <th style="vertical-align: middle; text-align: center" scope="col">Изображение</th>
            <th style="vertical-align: middle; text-align: center" scope="col">Наименование</th>
            <th style="vertical-align: middle; text-align: center" scope="col">Стоимость</th>
            <th style="vertical-align: middle; text-align: center" scope="col">Описание</th>
            <th style="vertical-align: middle; text-align: center" scope="col">ПП</th>
            <th style="vertical-align: middle; text-align: center" scope="col">Вег</th>
            <th style="vertical-align: middle; text-align: center" scope="col">Действие</th>
        </tr>
        </thead>
        <tbody id="result"></tbody>
    </table>
</div>
@section Scripts
{
    <script>
        $(document).ready(function() {
          $.get('@Url.Action("GetDishes", "Dishes")', function(data) {
             $("#result").html(data);
          })
        })
    </script>
}
