@model EditUserViewModel

 <form method="post">
    <div asp-validation-summary="All"></div>
    <hr class="hr-xs">
    <div class="form-group row">
        <label asp-for="OldPassword" class="col-sm-3 col-form-label register-label">
            Старый пароль:
            <span title="Обязательное поле" class="form-required">*</span>
        </label>
        <div class="col-sm-9">
            <div class="input-group">
                <input class="form-control" asp-for="OldPassword">
                <div class="input-group-append ">
                    <span class="input-group-text input-group-text-register">
                        <a href="#" class="password-control password-control-register"></a>
                    </span>
                </div>
            </div>
            <span asp-validation-for="OldPassword"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="NewPassword" class="col-sm-3 col-form-label register-label">
            Новый пароль:
            <span title="Обязательное поле" class="form-required">*</span>
        </label>
        <div class="col-sm-9">
            <div class="input-group">
                <input class="form-control" asp-for="NewPassword">
                <div class="input-group-append ">
                    <span class="input-group-text input-group-text-register">
                        <a href="#" class="password-control password-control-register"></a>
                    </span>
                </div>
            </div>
            <span asp-validation-for="NewPassword"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ConfirmPassword" class="col-sm-3 col-form-label register-label">
            Подтвердите пароль:
            <span title="Обязательное поле" class="form-required">*</span>
        </label>
        <div class="col-sm-9">
            <div class="input-group">
                <input class="form-control" asp-for="ConfirmPassword">
                <div class="input-group-append">
                    <span class="input-group-text input-group-text-register">
                        <a href="#" class="password-control password-control-register "></a>
                    </span>
                </div>
            </div>
            <span asp-validation-for="ConfirmPassword"></span>
            <span style="color: silver;display: block;">
                Пароль должен содержать не менее 8 символов из них 1 прописную 1 строчную буквы и 1 цифру.
            </span>
        </div>
    </div>
    <div class="form-group text-right">
        <input type="hidden" asp-for="Id" id="user-id">
        <input type="button" value="Сохранить" class="btn btn-dark" id="#modal-save" onclick="changePassword()"/>
    </div>
</form>



