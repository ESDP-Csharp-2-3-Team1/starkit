<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Сайт визитка</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body style="background-color: #fdfdfd;">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex">
                <ul class="navbar-nav flex-grow-1 justify-content-end">
                    <li class="nav-item mr-4">
                        <p class="contact-number">@Model.PhoneNumber</p>
                    </li>
                    <li class="nav-item">
                        <p class="basket-num">5</p>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex">
                <ul class="navbar-nav flex-grow-1 justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link text-dark myNavbar" href="#">О проекте</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark myNavbar" href="#">Меню</a>
                    </li>
                    <li class="nav-item" style="width: 50px">
                        <img style="width: 100%; height: 100%" id="nav-logo" src="~/@Model.LogoPath"/>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark myNavbar" href="#">Акций</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark myNavbar" href="#">Контакты</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container" style="margin-bottom: 70px;">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted business-card-footer">
    <div class="container" style="display: flex; justify-content: space-between; height: 70px">
        <p>&copy; 2020 Все права защищены</p>
        <p class="contact-number">@Model.PhoneNumber</p>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>