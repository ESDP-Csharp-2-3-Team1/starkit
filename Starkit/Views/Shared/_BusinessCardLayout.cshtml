                            <a class="nav-link text-dark" asp-area="">Контакты</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>

    <main role="main">
        @RenderBody()
    </main>


<footer class="border-top footer text-muted business-card-footer">
    <div class="container" style="display: flex; justify-content: space-between; height: 70px">
        <p>&copy; 2020 Все права защищены</p>
        <p class="contact-number"></p>
