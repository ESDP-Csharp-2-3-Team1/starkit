@model Stock

<div class="modal answer-modal" tabindex="-1" role="dialog" xmlns="http://www.w3.org/1999/html" id="modal-details">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5>@Model.Name</h5>
            </div>
            <div class="modal-body">
                <img src="~/@Model.Avatar" alt="" style="width: 100%">
                <p style="margin-top: 20px"><span style="font-weight: 700">Тип: </span> @Model.Type</p>
                <p style="margin-top: 20px"><span style="font-weight: 700">Стоимость: </span> @Model.Cost</p>
                <p><span style="font-weight: 700">Описание </span>- @Model.Description</p>
                @if (Model.Validity == "По времени")
                {
                    <p><span style="font-weight: 700">Время действия: </span>@Model.At.ToShortTimeString() - @Model.To.ToShortTimeString()</p>
                }
                else
                {
                    <p><span style="font-weight: 700">Время действия: </span>@Model.At.ToShortDateString() - @Model.To.ToShortDateString()</p>
                }
                <p><span style="font-weight: 700">Добавил </span>- @Model.Creator.Name</p>
                @if (Model.EditorId != null)
                {
                    <p><span style="font-weight: 700">Редактировал </span>- @Model.Editor.Name</p>
                }
                @if (Model.SecondDishId != null && Model.ThirdDishId != null)
                {
                    <p><span style="font-weight: 700">Первое блюдо: </span>@Model.FirstDish.Name</p>
                    <p><span style="font-weight: 700">Второе блюдо: </span>@Model.SecondDish.Name</p>
                    <p><span style="font-weight: 700">Подарочное блюдо: </span>@Model.ThirdDish.Name</p>
                }
                else
                {
                    <p><span style="font-weight: 700">Первое блюдо: </span>@Model.FirstDish.Name</p>
                    <p><span style="font-weight: 700">Подарочное блюдо: </span>@Model.FirstDish.Name</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeModal()">Закрыть</button>
            </div>
        </div>
    </div>
</div>