
<style>
  input{
  padding: 0; 
  border: none; 
  outline: none; 
  background: none;
  width: 100%;
  text-align: center;
  }
  textarea{
   padding: 0; 
    border: none; 
    outline: none; 
    background: none;
    width: 100%;
    text-align: center;
  }
</style>
<section id="carousel-section">
<form asp-action="SaveCarouselData" asp-controller="SiteCards" method="post" enctype="multipart/form-data">
@if (ViewBag.UserIsAuthenticated)
  {
    <button class="btn" id="EditCarouselBTN" type="submit"><i class="fas fa-save"></i></button>
  }
<div class="block-carr" >
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ul>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="~/@ViewBag.Data.ImgPathCarousel1" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block carousel-caption-code-1 my-carousel-caption-code-1">
          <h5>
            @if (ViewBag.UserIsAuthenticated)
            {
              <input name="DishNameCarousel1" type="text" value="@ViewBag.Data.DishNameCarousel1">
            }
            else
            {
              @ViewBag.Data.DishNameCarousel1
            }
          </h5>
          <p>
            @if (ViewBag.UserIsAuthenticated)
            {
              <textarea name="DishTextCarousel1" type="text">@ViewBag.Data.DishTextCarousel1</textarea>
              <div class="bg-input">
                <label for="inputImgPathCarousel1"><i class="fas fa-upload"></i></label>
                <input name="file1" type="file" id="inputImgPathCarousel1">
              </div> 
            }
            else
            {
              @ViewBag.Data.DishTextCarousel1
            }

          </p>
          <a class="btn btn-primary">Заказать сейчас</a>
        </div>
      </div>
      <div class="carousel-item">
        
        <img src="~/@ViewBag.Data.ImgPathCarousel2" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block carousel-caption-code-1 my-carousel-caption-code-1">
          <h5>
            @if (ViewBag.UserIsAuthenticated)
            {
              <input name="DishNameCarousel2" type="text" value="@ViewBag.Data.DishNameCarousel2">
            }
            else
            {
              @ViewBag.Data.DishNameCarousel2
            }
          </h5>
          <p>
            @if (ViewBag.UserIsAuthenticated)
            {
              <textarea name="DishTextCarousel2" type="text">@ViewBag.Data.DishTextCarousel2</textarea>
              <div class="bg-input">
              <label for="inputImgPathCarousel2"><i class="fas fa-upload"></i></label>
            <input name="file2" type="file" id="inputImgPathCarousel2">
            </div>
            }
            else
            {
              @ViewBag.Data.DishTextCarousel2
            }
          </p>
          <a class="btn btn-primary">Заказать сейчас</a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="~/@ViewBag.Data.ImgPathCarousel3" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block carousel-caption-code-1 my-carousel-caption-code-1">
          <h5>
            @if (ViewBag.UserIsAuthenticated)
            {
              <input name="DishNameCarousel3" type="text" value="@ViewBag.Data.DishNameCarousel3">
            }
            else
            {
              @ViewBag.Data.DishNameCarousel3
            }
          </h5>
          <p>
            @if (ViewBag.UserIsAuthenticated)
            {
              <textarea name="DishTextCarousel3" type="text">@ViewBag.Data.DishTextCarousel3</textarea>
              <div class="bg-input">
                <label for="inputImgPathCarousel3"><i class="fas fa-upload"></i></label>
                <input name="file3" type="file" id="inputImgPathCarousel3">
              </div>
            }
            else
            {
              @ViewBag.Data.DishTextCarousel3
            }
          </p>
          <a class="btn btn-primary">Заказать сейчас</a>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
</form>
</section>