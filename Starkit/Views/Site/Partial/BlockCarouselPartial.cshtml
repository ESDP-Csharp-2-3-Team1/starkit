
<style>
  input{
  padding: 0; 
  border: none; 
  outline: none; 
  background: none;
  width: 100%;
  text-align: center;
  }
  textarea{
   padding: 0; 
    border: none; 
    outline: none; 
    background: none;
    width: 100%;
    text-align: center;
  }
</style>
<form asp-action="SaveCarouselData" asp-controller="SiteCards" method="post" enctype="multipart/form-data">
<div class="block-carr" >
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ul>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="~/@ViewBag.Carousel.ImgPathCarousel1" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block carousel-caption-code-1 my-carousel-caption-code-1">
          <h5>
            @if (ViewBag.UserIsAuthenticated)
            {
              <input name="DishNameCarousel1" type="text" value="@ViewBag.Carousel.DishNameCarousel1">
            }
            else
            {
              @ViewBag.Carousel.DishNameCarousel1
            }
          </h5>
          <p>
            @if (ViewBag.UserIsAuthenticated)
            {
              <textarea name="DishTextCarousel1" type="text">@ViewBag.Carousel.DishTextCarousel1</textarea>
              <input name="file1" type="file" id="inputImgPathCarousel">
            }
            else
            {
              @ViewBag.Carousel.DishTextCarousel1
            }

          </p>
          <a class="btn btn-primary">Заказать сейчас</a>
        </div>
      </div>
      <div class="carousel-item">
        
        <img src="~/@ViewBag.Carousel.ImgPathCarousel2" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block carousel-caption-code-1 my-carousel-caption-code-1">
          <h5>
            @if (ViewBag.UserIsAuthenticated)
            {
              <input name="DishNameCarousel2" type="text" value="@ViewBag.Carousel.DishNameCarousel2">
            }
            else
            {
              @ViewBag.Carousel.DishNameCarousel2
            }
          </h5>
          <p>
            @if (ViewBag.UserIsAuthenticated)
            {
              <textarea name="DishTextCarousel2" type="text">@ViewBag.Carousel.DishTextCarousel2</textarea>
              <input name="file2" type="file" id="inputImgPathCarousel">
            }
            else
            {
              @ViewBag.Carousel.DishTextCarousel2
            }
          </p>
          <a class="btn btn-primary">Заказать сейчас</a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="~/@ViewBag.Carousel.ImgPathCarousel3" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block carousel-caption-code-1 my-carousel-caption-code-1">
          <h5>
            @if (ViewBag.UserIsAuthenticated)
            {
              <input name="DishNameCarousel3" type="text" value="@ViewBag.Carousel.DishNameCarousel3">
            }
            else
            {
              @ViewBag.Carousel.DishNameCarousel3
            }
          </h5>
          <p>
            @if (ViewBag.UserIsAuthenticated)
            {
              <textarea name="DishTextCarousel3" type="text">@ViewBag.Carousel.DishTextCarousel3</textarea>
              <input name="file3" type="file" id="inputImgPathCarousel">
            }
            else
            {
              @ViewBag.Carousel.DishTextCarousel3
            }
          </p>
          <a class="btn btn-primary">Заказать сейчас</a>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  @if (ViewBag.UserIsAuthenticated)
          {
            <button id="EditCarouselBTN" type="submit">Сохранить</button>
          }
</div>
</form>