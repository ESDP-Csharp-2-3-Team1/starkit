@model Restaurant

<div class="form-group  ed2-form-group">
    <div class="ed2-form-label">
        <label asp-for="NameRestaurant">Название завидения</label>
    </div>
    <div class="ed2-form-input">
        <div class="boxx2">
            <input type="text" class="form-control" asp-for="NameRestaurant">
            <span asp-validation-for="NameRestaurant"></span>
        </div>
    </div>
</div>
<div class="form-group  ed2-form-group">
    <div class="ed2-form-label">
        <label asp-for="PhoneNumber">Телефон</label>
    </div>
    <div class="ed2-form-input">
        <div class="boxx2">
            <input type="text" id="phoneNumber" class="form-control" asp-for="PhoneNumber" placeholder="+7 (___) ___-____">
            <span asp-validation-for="PhoneNumber"></span>
        </div>
    </div>
</div>
<div class="form-group  ed2-form-group">
    <div class="ed2-form-label">
        <label asp-for="ContactPerson">Контактное лицо</label>
    </div>
    <div class="ed2-form-input">
        <div class="boxx2">
            <input type="text" class="form-control" asp-for="ContactPerson">
            <span asp-validation-for="ContactPerson"></span>
        </div>
    </div>
</div>
<div class="form-group  ed2-form-group">
    <div class="ed2-form-label">
        <label asp-for="Address">Адрес</label>
    </div>
    <div class="ed2-form-input">
        <div class="boxx2">
            <input type="text" class="form-control" asp-for="Address">
            <span asp-validation-for="Address"></span>
        </div>
    </div>
</div>
<div class="form-group  ed2-form-group">
    <div class="ed2-form-label">
        <label asp-for="RestaurantInformation">О заведении</label>
    </div>
    <div class="ed2-form-input">
        <div class="boxx2">
            <textarea asp-for="RestaurantInformation" class="form-control" id="exampleFormControlTextarea156s" rows="3"></textarea>
            <span asp-validation-for="RestaurantInformation"></span>
        </div>
    </div>
</div>
<div class="form-group  ed2-form-group">
    <div class="ed2-form-label">
        <label asp-for="File">Логотип</label>
    </div>
    <div class="ed2-form-input">
        <div class="boxx2 ">
            <input type="file" id="restaurantLogo" class="form-control" asp-for="File">
        </div>
    </div>
</div>
<div class="form-group  ed2-form-group">
    <div class="ed2-form-label">
        <label asp-for="DomainAvailability">У меня уже есть домен</label>
    </div>
    <div class="ed2-form-input">
        <div class="boxx2">
            <div class="form-check form-check-inline">
                <input asp-for="DomainAvailability" onclick="BlockDomainShow(true)" class="form-check-input" type="radio" id="res-inlineRadio1" value="@true">
                <label  class="form-check-label" for="res-inlineRadio1">Да</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="DomainAvailability" onclick="BlockDomainShow(false)" class="form-check-input" type="radio"  id="res-inlineRadio2" value="@false">
                <label class="form-check-label" for="res-inlineRadio2">Нет</label>
            </div>
            <br>
            <span asp-validation-for="DomainAvailability"></span>
        </div>
    </div>
</div>
<div id="block-domain">
    <div class="form-group  ed2-form-group">
        <div class="ed2-form-label">
            <label asp-for="DomainName">Домен</label>
        </div>
        <div class="ed2-form-input">
            <div class="boxx2">
                <input type="text" class="form-control" asp-for="DomainName">
                <span asp-validation-for="DomainName"></span>
            </div>
        </div>
    </div>
    <div class="form-group  ed2-form-group">
            <div class="ed2-form-label">
                <label asp-for="DomainRegistrar">Регистратор домен </label>
            </div>
            <div class="ed2-form-input">
                <div class="boxx2">
                    <input type="text" class="form-control" asp-for="DomainRegistrar">
                    <span asp-validation-for="DomainRegistrar"></span>
                </div>
            </div>
        </div>
</div>
