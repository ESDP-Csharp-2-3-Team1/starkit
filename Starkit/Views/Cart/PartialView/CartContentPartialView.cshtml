@foreach (var item in ViewBag.cart)
{
    <tr>
        <td class="cart-cell">@item.Dish.Name</td>
        <td class="cart-cell">
            <img src="~/@item.Dish.Avatar" width="60"/>
        </td>
        <td class="cart-cell">@item.Dish.Cost</td>
        <td class="cart-cell">
            <a asp-controller="cart" asp-action="remove" asp-route-id="@item.Dish.Id">Убрать</a>
        </td>
        <td class="cart-cell" id="qty-@item.Dish.Id">
            <img style="cursor: pointer" onclick="up('@item.Dish.Id', '@(item.Quantity + 1)')" src="https://img.icons8.com/material-two-tone/24/000000/up.png"/>
            @item.Quantity
            <img style="cursor: pointer" onclick="down('@item.Dish.Id', '@(item.Quantity - 1)')" src="https://img.icons8.com/material-two-tone/24/000000/down--v1.png"/>
        </td>
        <td class="cart-cell">@(item.Dish.Cost * item.Quantity)</td>
    </tr>
}
<tr>
    <td style="vertical-align: middle" align="right" colspan="5">Сумма</td>
    <td style="vertical-align: middle">
        @ViewBag.total
    </td>
</tr>
