@model BookingTable
<div class="modal answer-modal" tabindex="-1" role="dialog" xmlns="http://www.w3.org/1999/html" id="modal-details">
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="create-dish">Бронирование стола</h2>
        </div>
        <div class="modal-body">
            <form asp-action="Book" asp-controller="Booking" method="post" asp-route-tableId="@Model.TableId">
                <div class="form-group row">
                    <label for="" class="col-sm-5 col-form-label createMenuLabel">Ваше имя</label><br/>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" asp-for="Booking.ClientName">
                    </div>
                    <span class="validationError" asp-validation-for="Booking.ClientName"></span>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-5 col-form-label createMenuLabel">Выберите дату и время</label><br/>
                    <div class="col-sm-5">
                        <input style="font-size: 8px; margin-top: 5px" asp-for="Booking.DateTime" type="datetime-local" class="form-control" value="@DateTime.Now">
                    </div>
                    <span class="validationError" asp-validation-for="Booking.DateTime"></span>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-5 col-form-label createMenuLabel">Комментарии</label><br/>
                    <div class="col-sm-5">
                        <textarea style="height: 150px; resize: none" asp-for="Booking.Comment" class="form-control"></textarea>
                    </div>
                    <span class="validationError" asp-validation-for="Booking.Comment"></span>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-5 col-form-label createMenuLabel">Кол-во гостей</label><br/>
                    <div class="col-sm-5">
                        <input type="number" class="form-control" asp-for="Booking.Pax">
                    </div>
                    <span class="validationError" asp-validation-for="Booking.Pax"></span>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-5 col-form-label createMenuLabel">Номер телефона</label><br/>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" asp-for="Booking.PhoneNumber">
                    </div>
                    <span class="validationError" asp-validation-for="Booking.PhoneNumber"></span>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-5 col-form-label createMenuLabel">Email</label><br/>
                    <div class="col-sm-5">
                        <input id="inputCost" type="text" class="form-control" asp-for="Booking.Email">
                    </div>
                    <span class="validationError" asp-validation-for="Booking.Email"></span>
                </div>

                
                <div style="text-align: center" class="d-flex justify-content-center mb-3">
                    <br/><button type="submit" class="btn btn-dark">Забронировать</button>
                    <button type="button" class="btn btn-secondary ml-3" onclick="closeModal()">Закрыть</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>