@model List<Category>

@{
    ViewBag.Title = "Спсиок категорий";
    Layout = "_Layout";
}

<h2 class="text-categories">Список категорий</h2>
<div style="overflow-x:auto;">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Идентификатор</th>
            <th>Категория</th>
            <th>Действие</th>
        </tr>
        </thead>
        @if (Model.Count != 0)
        {
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <button type="button" class="btn btn-danger" id="delete">Удалить</button>
                        <a href="#">Редактировать</a>
                    </td>
                </tr>
            }
        }
    </table>
</div>

