@model Category

@{
    ViewBag.Title = "Добавление категорий";
    Layout = "_Layout";
}
<style>
    #dropdown1{
        display: block;
    }
    #dropdown1-li-2{
          margin-left: 15px;
            background: #9ad9ea;
    }
    #dropdown1-li-2 a{
                color: #262626;
                font-weight: 600;
                border-left: 2px solid #41728b;
    }
    #dropdown1-li-2 a:hover{
        color: #262626;
    }
 </style>

<div class="row" style="margin: 30px 0 80px 0">
    <div class="col-md-8 mt-5">
        <h2 class="create-category">Добавление категорий</h2>
        <form asp-action="Create" method="post">
            <div class="form-group row">
                <label for="" class="col-sm-5 col-form-label createCategoryLabel">Название категорий</label><br/>
                <div class="col-sm-7">
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <span class="validationError" asp-validation-for="Name"></span>
            </div>
            <div style="text-align: center">
                <br/><button type="submit" class="btn btn-dark">Добавить</button>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
