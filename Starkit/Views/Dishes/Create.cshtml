@model Dish

@{
    ViewBag.Title = "Добавление блюда";
    Layout = "_Layout";
}
<style>
    #dropdown1{
        display: block;
    }
    #dropdown1-li-1{
          margin-left: 15px;
            background: #9ad9ea;
    }
    #dropdown1-li-1 a{
                color: #262626;
                font-weight: 600;
                border-left: 2px solid #41728b;
    }
    #dropdown1-li-1 a:hover{
        color: #262626;
    }
 </style>
<div class="dish-main-container">
        <h2 class="create-dish">Добавление блюда</h2>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group row my-form-group">
                <label for="" class="col-sm-4 col-form-label">Выберите категорию</label><br/>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="CategoryId" id="category">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                                    <span class="validationError" asp-validation-for="CategoryId"></span>

                </div>
            </div>
            <div class="form-group row my-form-group">
                <label for="" class="col-sm-4 col-form-label">Название блюда</label><br/>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="Name">
                    <span class="validationError" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group row my-form-group">
                <label for="" class="col-sm-4 col-form-label">Стоимость</label><br/>
                <div class="col-sm-8">
                    <input type="number" class="form-control" asp-for="Cost">
                                    <span class="validationError" asp-validation-for="Cost"></span>
                </div>
            </div>
            <div class="form-group row ">
                <label for="" class="col-sm-4 col-form-label">Описание</label><br/>
                <div class="col-sm-8">
                    <textarea asp-for="Description" style="height: 60px" class="form-control"></textarea>
                                    <span class="validationError" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-group row ">
                <label for="" class="col-sm-4 col-form-label">Ингредиенты</label><br/>
                <div class="col-sm-8">
                    <textarea   asp-for="Ingredients" style="height: 60px" class="form-control"></textarea>
                    <span class="validationError" asp-validation-for="Ingredients"></span>
                </div>
            </div>
            @* <div class="form-group row my-form-group"> *@
            @*     <div class="col-sm-12"> *@
            @*         <label for="myFIle" class="chous">Выберите файлы</label> *@
            @*         <input type="file"  id="myFIle" class="form-control my" asp-for="File" multiple="multiple"/> *@
            @*     </div> *@
            @*     <span class="validationError" asp-validation-for="File"></span> *@
            @* </div> *@
            <div class="form-group row my-form-group">
                <label asp-for="File" class="col-sm-4 col-form-label">Фотография блюда</label><br/>
                <div class="col-sm-8" >
                    <input type="file" style="border: none" class="form-control" asp-for="File">
                                    <span class="validationError" asp-validation-for="File"></span>

                </div>
            </div>
            <div class="form-group row my-form-group">
                <label for="" class="col-sm-4 col-form-label">Калорийность</label><br/>
                <div class="col-sm-8">
                    <input type="number" class="form-control" asp-for="Calorie">
                                    <span class="validationError" asp-validation-for="Calorie"></span>
                </div>
            </div>
            <div class="form-group row my-form-group-2">
                <label for="" class="col-sm-4 col-form-label label-1">Правильное питание</label>
                <div class="col-sm-8">
                    <input type="checkbox" class="form-control" asp-for="ProperNutrition" value="true">
                </div>
            </div>
                 <div class="form-group row my-form-group-2">
                     <label for="" class="col-sm-4 col-form-label label-2">Вегетарианское</label>
                            <div class="col-sm-8">
                                <input type="checkbox" class="form-control" asp-for="Vegetarian" value="true">
                            </div>
                        </div>
            <div class="create-ct-btn-box">
                <button type="submit" class="btn btn-primary"  >Опубликовать</button>
            </div>
        </form>
                    <div class="form-group row" id="result"></div>

</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $('.my').change(function() {
            if ($(this).val() != '') $(this).prev().text('Выбрано файлов: ' + $(this)[0].files.length);
            else $(this).prev().text('Выберите файлы');
        });
        
        $(document).ready(function() {
            getCreateDish();
        });
        
        $("#category").change(function() {
           getCreateDish();
        });
        
        function getCreateDish() {
            var category = $("#category").val();
            $.get(`@Url.Action("GetCreateDish")/${category}`, function(data) {
                $("#result").html(data);
            });
        }
    </script>
}