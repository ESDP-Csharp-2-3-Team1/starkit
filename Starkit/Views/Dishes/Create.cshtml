@model Dish

@{
    ViewBag.Title = "Добавление блюда";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6 mt-5">
        <h2 class="create-dish">Добавление блюда</h2>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label for="" class="col-sm-4 col-form-label">Выберите категорию</label><br/>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="CategoryId">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-4 col-form-label">Название блюда</label><br/>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <span class="validationError" asp-validation-for="Name"></span>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-4 col-form-label">Стоимость</label><br/>
                <div class="col-sm-8">
                    <input type="number" class="form-control" asp-for="Cost">
                </div>
                <span class="validationError" asp-validation-for="Cost"></span>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-4 col-form-label">Описание</label><br/>
                <div class="col-sm-8">
                    <textarea style="height: 150px; resize: none" asp-for="Description" class="form-control"></textarea>
                </div>
                <span class="validationError" asp-validation-for="Description"></span>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <input type="file" class="form-control" asp-for="File">
                </div>
                <span class="validationError" asp-validation-for="File"></span>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-4 col-form-label">Калорийность</label><br/>
                <div class="col-sm-8">
                    <input type="number" class="form-control" asp-for="Calorie">
                </div>
                <span class="validationError" asp-validation-for="Calorie"></span>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-3 col-form-label">Правильное питание</label>
                <div class="col-sm-1">
                    <input type="checkbox" class="form-control" asp-for="ProperNutrition" value="true">
                </div>
                <label for="" class="col-sm-3 col-form-label">Вегетарианское</label>
                <div class="col-sm-1">
                    <input type="checkbox" class="form-control" asp-for="Vegetarian" value="true">
                </div>
                <label for="" class="col-sm-3 col-form-label">Видимость</label>
                <div class="col-sm-1">
                    <input type="checkbox" class="form-control" asp-for="Visibility" value="true">
                </div>
            </div>
            <div style="text-align: center">
                <br/><button type="submit" class="btn btn-dark">Опубликовать</button>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
