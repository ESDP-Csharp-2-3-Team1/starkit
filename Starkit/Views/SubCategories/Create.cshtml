@model SubCategory

@{
    ViewBag.Title = "Добавление подкатегорий";
    Layout = "_Layout";
}
<style>
    #dropdown1{
        display: block;
    }
    #dropdown1-li-3{
          margin-left: 15px;
            background: #9ad9ea;
    }
    #dropdown1-li-3 a{
                color: #262626;
                font-weight: 600;
                border-left: 2px solid #41728b;
    }
    #dropdown1-li-3 a:hover{
        color: #262626;
    }
 </style>
<div class="row" style="margin: 30px 0 80px 0">
    <div class="col-md-6 mt-5">
        <h2 class="create-category">Добавление подкатегорий</h2>
        <form asp-action="Create" method="post">
            <div class="form-group row">
                <label for="" class="col-sm-4 col-form-label">Выберите категорию</label><br/>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="CategoryId">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <span class="validationError" asp-validation-for="CategoryId"></span>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-4 col-form-label">Название подкатегорий</label><br/>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <span class="validationError" asp-validation-for="Name"></span>
            </div>
            <div style="text-align: center">
                <br/><button type="submit" class="btn btn-dark">Добавить</button>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

