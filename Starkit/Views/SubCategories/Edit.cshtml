@model EditSubCategoryViewModel

@{
    ViewBag.Title = "Редактирование подкатегории";
    Layout = "_Layout";
}

<div class="row" style="margin: 30px 0 80px 0">
    <div class="col-md-9 mt-5" style="margin: 30px 0 80px 0">
        <h2 class="create-category">Редактирование подкатегорий</h2>
        <form asp-action="Edit" method="post">
            @Html.Hidden("Id", Model.Id)
            <div class="form-group row">
                <label for="" class="col-sm-4 col-form-label createSubCategoryLabel">Категория</label><br/>
                <div class="col-sm-8">
                    <input type="text" class="form-control" value="@Model.Category.Name" disabled="disabled">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-4 col-form-label createSubCategoryLabel">Название подкатегории</label><br/>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
                </div>
                <span class="validationError" asp-validation-for="Name"></span>
            </div>
            <input type="hidden" asp-for="Id" value="@Model.Id">
            <div style="text-align: center">
                <br/><button type="submit" class="btn btn-dark">Редактировать</button>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

